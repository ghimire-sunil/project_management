<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Template -->
    <record id="project_crm" model="project.project">
        <field name="name">Crm</field>
        <field name="is_favorite">True</field>
        <field name="active">True</field>
    </record>

    <!-- Stages -->
    <record id="initiation_phase" model="project.task.type">
        <field name="name">Initiation Phase</field>
        <field name="project_ids" eval="[(4, ref('project_crm'))]"/>
    </record>
    <record id="development_phase" model="project.task.type">
        <field name="name">Development Phase</field>
        <field name="project_ids" eval="[(4, ref('project_crm'))]"/>
    </record>
    <record id="testing_phase" model="project.task.type">
        <field name="name">Testing-Phase</field>
        <field name="project_ids" eval="[(4, ref('project_crm'))]"/>
    </record>
    <record id="handover_phase" model="project.task.type">
        <field name="name">HandOver</field>
        <field name="project_ids" eval="[(4, ref('project_crm')) ]"/>
    </record>

    <!-- Initiation Phase Task -->
    <record id="task_core_config_sale_team_struct" model="project.task">
        <field name="name">Core Configuration and Sales Team Structure</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="user_ids" eval="[(4, ref('base.user_admin'))]"/> <!-- Example: Admin -->
    </record>
    <record id="task_pipeline_stage_management" model="project.task">
        <field name="name">Pipeline and Stage Management</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
    </record>
    <record id="task_lead_opportunity_management" model="project.task">
        <field name="name">Lead and Opportunity Management</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
    </record>

    <record id="task_activity_follow_up_auto" model="project.task">
        <field name="name">Activity and Follow-up Automation</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
    </record>
    <record id="task_integration_conversion_workflow" model="project.task">
        <field name="name">Integration and Conversion Workflow</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
    </record>
    <record id="task_reporting_dashboard_analytics" model="project.task">
        <field name="name">Reporting, Dashboards and Analytics</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
    </record>

    <!--Core Configuration and Sales Team Structure subtack-->

    <record id="subtask_define_sale_team_hierarchy" model="project.task">
        <field name="name">Define Sales Team Hierarchy</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">1</field>
        <field name="parent_id" ref="task_core_config_sale_team_struct"/>
    </record>
    <record id="subtask_configure_crm_setting" model="project.task">
        <field name="name">Configure CRM Settings</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">2</field>
        <field name="parent_id" ref="task_core_config_sale_team_struct"/>
    </record>
    <record id="subtask_configure_default_email_template" model="project.task">
        <field name="name">Configure Default Email Templates</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">1</field>
        <field name="parent_id" ref="task_core_config_sale_team_struct"/>
    </record>
    <record id="subtask_configure_access_right_security" model="project.task">
        <field name="name">Configure Access Rights and Security</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">2</field>
        <field name="parent_id" ref="task_core_config_sale_team_struct"/>
    </record>
    <!--Pipeline & Stage Management-->
    <record id="subtask_design_custom_sale_pipelinee" model="project.task">
        <field name="name">Design Custom Sales Pipelines</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">1</field>
        <field name="parent_id" ref="task_pipeline_stage_management"/>
    </record>
    <record id="subtask_customize_pipeline_stages" model="project.task">
        <field name="name">Customize Pipeline Stages</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">2</field>
        <field name="parent_id" ref="task_pipeline_stage_management"/>
    </record>
    <record id="subtask_configure_auto_action_triggers" model="project.task">
        <field name="name">Configure Automated Actions and Triggers</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">1</field>
        <field name="parent_id" ref="task_pipeline_stage_management"/>
    </record>
    <!--Lead and Opportunity Management-->
    <record id="subtask_lead_and_opportunity_type" model="project.task">
        <field name="name">Configure Lead and Opportunity Types</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">2</field>
        <field name="parent_id" ref="task_lead_opportunity_management"/>
    </record>
    <record id="subtask_setup_lead_assignment_rules" model="project.task">
        <field name="name">Set up Lead Assignment Rules (Automation)</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">1</field>
        <field name="parent_id" ref="task_lead_opportunity_management"/>
    </record>
    <record id="subtask_implement_lead_scoring" model="project.task">
        <field name="name">Implement Lead Scoring</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">2</field>
        <field name="parent_id" ref="task_lead_opportunity_management"/>
    </record>


    <!--Activity & Follow-up Automation	-->

    <record id="subtask_configure_activities_type" model="project.task">
        <field name="name">Configure Activity Types</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">1</field>
        <field name="parent_id" ref="task_activity_follow_up_auto"/>
    </record>
    <record id="subtask_setup_planned_activities_sched" model="project.task">
        <field name="name">Set up Planned Activities Scheduler</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">2</field>
        <field name="parent_id" ref="task_activity_follow_up_auto"/>
    </record>
    <record id="subtask_implement_next_action_dashboard" model="project.task">
        <field name="name">Implement Next Action Dashboards</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">1</field>
        <field name="parent_id" ref="task_activity_follow_up_auto"/>
    </record>

    <!--Integration & Conversion Workflow-->
    <record id="subtask_integrate_website_form_builder" model="project.task">
        <field name="name">Integrate with Website Form Builder</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">2</field>
        <field name="parent_id" ref="task_integration_conversion_workflow"/>
    </record>
    <record id="subtask_config_email_integration" model="project.task">
        <field name="name">Configure Email Integration (Gmail/Outlook)</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">1</field>
        <field name="parent_id" ref="task_integration_conversion_workflow"/>
    </record>
    <record id="subtask_define_convert_opportunity" model="project.task">
        <field name="name">Define the "Convert to Opportunity" Process</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">2</field>
        <field name="parent_id" ref="task_integration_conversion_workflow"/>
    </record>
    <record id="subtask_integrate_sale_module" model="project.task">
        <field name="name">Integrate with Sales Module</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">1</field>
        <field name="parent_id" ref="task_integration_conversion_workflow"/>
    </record>

    <!--Reporting, Dashboards & Analytics-->

    <record id="subtask_configure_main_crm_dashboard" model="project.task">
        <field name="name">Configure Main CRM Dashboard</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">2</field>
        <field name="parent_id" ref="task_reporting_dashboard_analytics"/>
    </record>
    <record id="subtask_customize_crm_report" model="project.task">
        <field name="name">Customize CRM Reports</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">1</field>
        <field name="parent_id" ref="task_reporting_dashboard_analytics"/>
    </record>
    <record id="subtask_setup_recurring_revenue_reporting" model="project.task">
        <field name="name">Set up Recurring Revenue Reporting (if using subscriptions)</field>
        <field name="project_id" ref="project_crm"/>
        <field name="stage_id" ref="initiation_phase"/>
        <field name="allocated_hours">2</field>
        <field name="parent_id" ref="task_reporting_dashboard_analytics"/>
    </record>


</odoo>