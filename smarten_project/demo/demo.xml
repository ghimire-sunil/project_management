<odoo>
    <!-- Project Template -->
    <record id="project_security_assessment" model="project.project">
        <field name="name">Default Template</field>
        <field name="is_favorite">True</field>
        <field name="active">True</field>
    </record>

    <!-- Stages -->
    <record id="stage_initiation" model="project.task.type">
        <field name="name">Initiation Stage</field>
        <field name="project_ids" eval="[(4, ref('project_security_assessment'))]"/>
    </record>
    <record id="stage_pre_engagement" model="project.task.type">
        <field name="name">Pre-Engagement Stage</field>
        <field name="project_ids" eval="[(4, ref('project_security_assessment'))]"/>
    </record>
    <record id="stage_testing" model="project.task.type">
        <field name="name">Testing-Scope</field>
        <field name="project_ids" eval="[(4, ref('project_security_assessment'))]"/>
    </record>
    <record id="stage_draft_report" model="project.task.type">
        <field name="name">Draft Report Stage</field>
        <field name="project_ids" eval="[(4, ref('project_security_assessment')) ]"/>
    </record>
    <record id="stage_final_report" model="project.task.type">
        <field name="name">Final Report Stage</field>
        <field name="project_ids" eval="[(4, ref('project_security_assessment'))]"/>
    </record>
    <record id="stage_retesting" model="project.task.type">
        <field name="name">Re-Testing-Scope</field>
        <field name="project_ids" eval="[(4, ref('project_security_assessment'))]"/>
    </record>

    <!-- Initiation Tasks -->
    <record id="task_kickoff" model="project.task">
        <field name="name">Kickoff Meeting</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_initiation"/>
        <field name="allocated_hours">0.5</field>
        <field name="user_ids" eval="[(4, ref('base.user_admin'))]"/> <!-- Example: Admin -->
    </record>

    <record id="task_onboarding" model="project.task">
        <field name="name">Handover to Team (Project Onboarding)</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_initiation"/>
    </record>
    <record id="task_readiness" model="project.task">
        <field name="name">Readiness Document</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_initiation"/>

    </record>
    <record id="task_client_email_call" model="project.task">
        <field name="name">Client email + call regarding Initiation</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_initiation"/>
        <field name="allocated_hours">0.5</field>
    </record>
    <record id="task_erp_mapping" model="project.task">
        <field name="name">Erp Mapping</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_initiation"/>
        <field name="allocated_hours">0.5</field>
    </record>
    <record id="task_resource_planning" model="project.task">
        <field name="name">Resource Planning</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_initiation"/>
        <field name="allocated_hours">2</field>
    </record>


    <!-- Pre-Engagement Tasks -->
    <record id="task_resource_allocation" model="project.task">
        <field name="name">Resource Allocation</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_pre_engagement"/>
        <field name="allocated_hours">0.5</field>
    </record>
    <record id="task_scope_freeze" model="project.task">
        <field name="name">Scope Freeze (Clarification)</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_pre_engagement"/>
        <field name="allocated_hours">0.5</field>
    </record>
    <record id="task_timeline" model="project.task">
        <field name="name">Provide Estimated Timeline</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_pre_engagement"/>
        <field name="allocated_hours">0.5</field>
    </record>
    <record id="task_timeline_application_architecture" model="project.task">
        <field name="name">Understanding Application or Network Architecture</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_pre_engagement"/>
        <field name="allocated_hours">0.5</field>
    </record>
    <record id="task_project_plan" model="project.task">
        <field name="name">Provide Project Execution Plan</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_pre_engagement"/>
        <field name="allocated_hours">0.5</field>
    </record>
    <record id="task_initialization" model="project.task">
        <field name="name">Initialization of the on-site Project</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_pre_engagement"/>
        <field name="allocated_hours">0.5</field>
    </record>
    <!-- Testing Tasks -->
    <record id="task_prepare_test_Reconnaissance" model="project.task">
        <field name="name">Reconnaissance and Mapping</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_testing"/>
        <field name="allocated_hours">8</field> <!-- 1 day -->
    </record>

    <record id="task_execute_test_Scanning" model="project.task">
        <field name="name">Scanning/ Vulnerability Assessment</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_testing"/>
        <field name="allocated_hours">40</field> <!-- 5 days -->
    </record>

    <record id="task_Exploitation" model="project.task">
        <field name="name">Exploitation/ Penetration</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_testing"/>
        <field name="allocated_hours">16</field> <!-- 2 days -->
    </record>

    <record id="task_scope_Communication" model="project.task">
        <field name="name">Communication the immediate patches</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_testing"/>
        <field name="allocated_hours">4</field> <!-- half day -->
    </record>
    <record id="task_scope_Preparation" model="project.task">
        <field name="name">POC Preparation/Verification</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_testing"/>
        <field name="allocated_hours">4</field> <!-- half day -->
    </record>

    <!-- Draft Report -->
    <record id="task_draft_report" model="project.task">
        <field name="name">Draft Report Preparation</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_draft_report"/>
        <field name="allocated_hours">100</field> <!-- 5 days -->
    </record>

    <!-- Final Report -->
    <record id="task_final_report" model="project.task">
        <field name="name">Final Report Preparation</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_final_report"/>
        <field name="allocated_hours">48</field> <!-- 1 day -->
    </record>

    <!-- Re-Testing Tasks -->
    <record id="task_retest_recon" model="project.task">
        <field name="name">Re-Testing: Reconnaissance and Mapping</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_retesting"/>
    </record>

    <record id="task_retest_scanning" model="project.task">
        <field name="name">Re-Testing: Scanning / Vulnerability Assessment</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_retesting"/>
    </record>

    <record id="task_retest_exploit" model="project.task">
        <field name="name">Re-Testing: Exploitation / Penetration Testing</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_retesting"/>
    </record>

    <record id="task_retest_patches" model="project.task">
        <field name="name">Re-Testing: Communicate Immediate Patches</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_retesting"/>
    </record>

    <record id="task_retest_poc" model="project.task">
        <field name="name">Re-Testing: POC Preparation / Verification</field>
        <field name="project_id" ref="project_security_assessment"/>
        <field name="stage_id" ref="stage_retesting"/>
    </record>

</odoo>
